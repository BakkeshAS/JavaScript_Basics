<script>
function blockSpecialChar(e) {
var k = e.keyCode;
return ((k> 64 && k<91) || (k> 96 && k< 123 ) || k ==8 || k==34 || k==44 || k==46 || k==95 || k==32 || (k>= 48 && k<= 57));
}
</script>
<input onkeypress="return blockSpecialChar(event);">
</input>
</body>
